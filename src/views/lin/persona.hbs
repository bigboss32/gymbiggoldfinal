                            </div>
                        </div>
                        <br>

                        <!--inicia aqui-->
                        <div class="container" id="advanced-search-form">

                            <form action="/persona" method="POST">
                                <h2>REGISTRO DE CLIENTES AL SISTEMA</h2>

                                <div class="form-group">
                                    <label for="first-name">ID CLIENTE</label>
                                    <input type="text" class="form-control" placeholder="LLAVE PRIMARIA" id="ID_PERS"
                                        style="width:400px" name="ID_PERS">
                                </div>
                                <div class="form-group">
                                    <label for="first-name">PRIMER NOMBRE</label>
                                    <input type="text" class="form-control" placeholder="Primer nombre" id="NOMB_UNO"
                                        style="width:400px" name="NOMB_UNO">
                                </div>
                                <div class="form-group">
                                    <label for="first-name">SEGUNDO NOMBREE</label>
                                    <input type="text" class="form-control" placeholder="segundo nombre" id="NOMB_DOS"
                                        style="width:400px" name="NOMB_DOS">
                                </div>
                                <div class="form-group">
                                    <label for="first-name">PRIMER APELLIDO</label>
                                    <input type="text" class="form-control" placeholder="Primer apellido" id="APE_UNO"
                                        style="width:400px" name="APE_UNO">
                                </div>
                                <div class="form-group">
                                    <label for="first-name">SEGUNDO APELLIDO</label>
                                    <input type="text" class="form-control" placeholder="segundo apellido" id="APE_DOS"
                                        style="width:400px" name="APE_DOS">
                                </div>

                                <div class="form-group">
                                    <label for="first-name">NUMERO DE DOCUMENTO</label>
                                    <input type="text" class="form-control" placeholder="IDENTIFICACION PERSONAL"
                                        id="ID_PERS" style="width:400px" name="NUMERO_DOC" autofocus>
                                </div>

                                <div class="form-group">
                                    <label for="first-name">FECHA DE NACIMIENTO</label>
                                    <input type="date" id="FECH_NACI" name="FECH_NACI">
                                </div>

                                <div class="form-group">
                                    <label for="first-name">SEXO</label>
                                    <select class="form-control" id="SEXO" name="SEXO" style="width:400px">
                                        <option value="1">Masculino</option>
                                        <option value="2">Femenino</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="first-name">NUMERO DE CELULAR</label>
                                    <input type="text" class="form-control" placeholder="Numero Celular" id="NUM_CEL"
                                        style="width:400px" name="NUM_CEL">
                                </div>
                                <div class="form-group">
                                    <label for="first-name">EMAIL</label>
                                    <input type="text" class="form-control" placeholder="Correo electronico" id="CORRE"
                                        style="width:400px" name="CORRE">
                                </div>

                                <div class="form-group">
                                    <label for="first-name">TIPO DE DOCUMENTO</label>
                                    <select class="form-control" id="FK_TIP_DOC" name="FK_TIP_DOC" style="width:400px">
                                        {{#each documenst}}
                                        <option value="{{ID_TIP_DOC}}">{{NOMB_TIP_DOC}}</option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="first-name">EPS</label>
                                    <select class="form-control" id="FK_EPS" name="FK_EPS" style="width:400px">
                                        {{#each entidad}}
                                        <option value="{{ID_EPS}}">{{NOMB_EPS}}</option>
                                        {{/each}}
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="first-name">TIPO DE SANGRE</label>
                                    <select class="form-control" id="FK_TIP_SANG" name="FK_TIP_SANG"
                                        style="width:400px">
                                        {{#each sangres}}
                                        <option value="{{ID_TIP_SANG}}">{{NOMB_TIP_SANG}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-info btn-lg btn-responsive"
                                        id="botonguardarproducto">
                                        guardar persona</button>
                                </div>

                            </form>
                        </div>

                        <div class="container d-flex">
                            <table class="table table-striped table-hover">

                                <!--thead es la cabeza de la tabla-->
                        </div>

                    </div>
                </div>
                </table>
            </div>
        </div>
    </div>
</section>

