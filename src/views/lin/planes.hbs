                                        <option value="INACTIVO">INACTIVO</option>
                                    </select>
                                </div>

									<div class="form-group">
										<button type="submit" class="btn btn-info btn-lg btn-responsive"
											id="botonguardarproducto">
											guardar plan</button>
									</div>

							</form>
						</div>

						<div class="container d-flex">
							<table class="table table-striped table-hover">

								<!--thead es la cabeza de la tabla-->
						</div>

					</div>
				</div>
				</table>
			</div>
		</div>
	</div>

	</div>
	</div>
	</div>
</section>

<section id="main">
	<div class="container">
		<div class="row">

			<div class="col-md-12">
				<!-- Website Overview -->
				<div class="panel panel-default">
					<div class="panel-heading main-color-bg">
						<h3 class="panel-title">PLANES REGISTRADOS EN LA BASE DE DATOS</h3>
					</div>
					<div class="panel-body">

						<!--inicia aqui-->

						<div class="row">



							<div class="col-md-12">
								<table class="table    table-bordered table table-hover">

									<tr class="info">
										<th scope="col">ID</th>
										<th scope="col">NOMBRE</th>
										<th scope="col">PRECIO</th>
										<th scope="col">DURACION</th>
										<th scope="col">ESTADO</th>
										<th scope="col">ACTUALIZAR</th>
										<th scope="col">ELIMINAR</th>
									</tr>
									{{#each dat}}

									<tr>
										<td>{{ID_ELEMENT}}</td>
										<td>{{NOMB_ELEMENT}}</td>
										<td>{{PRECI}}</td>
										<td>{{DURACI}}</td>
										<td>{{ESTA}}</td>
										<td> <a href="/a_plan/{{ID_ELEMENT}}" class="btn btn-info">Actualizar </a></td>
										<td><a href="/planes/{{ID_ELEMENT}}" class="btn btn-danger ">Eliminar </a></td>
									</tr>

									{{else}}
									<div class="col-md-12 mx-auto">
										<div class=" card card-body text-center ">
											<H1>NO HAY PRODUCTOS EN LA LISTA</H1>
										</div>
									</div>

									{{/each}}
								</table>
							</div>





						</div>
					</div>
				</div>
				<br>





			</div>
		</div>
		</table>
	</div>
	</div>
	</div>

	</div>
	</div>
	</div>
</section>





